<web-app version="2.5"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

    <display-name>Compass2 NG</display-name>
    
    <session-config>
        <session-timeout>120</session-timeout>
    </session-config>
    
    <servlet>
        <servlet-name>compass2Service</servlet-name>
        <servlet-class>no.ovitas.compass2.web.server.Compass2ServiceImpl</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>initService</servlet-name>
        <servlet-class>no.ovitas.compass2.web.server.InitServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    
    <servlet>
        <servlet-name>kbUploadServlet</servlet-name>
        <servlet-class>no.ovitas.compass2.web.server.KBFileUploadServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>compass2Service</servlet-name>
        <url-pattern>/compass2Service</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>kbUploadServlet</servlet-name>
        <url-pattern>/kbUpload</url-pattern>
    </servlet-mapping>
    
        
    <servlet>
        <servlet-name>compassWebServlet</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>classpath*:META-INF/spring/applicationContext.xml</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    
     <servlet-mapping>
        <servlet-name>compassWebServlet</servlet-name>
        <url-pattern>/upload/*</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>initService</servlet-name>
        <url-pattern>/reconfig</url-pattern>
    </servlet-mapping>    

	<resource-ref>
		<res-ref-name>jdbc/compass2WebDS</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
</web-app>
